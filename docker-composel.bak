zookeeper:
  image: dalekurt/zookeeper:3.4.6
  ports:
    - "2181"
kafka:
  image: dalekurt/kafka
  name: kafka
  hostname: kafka
  ports:
    - "9092"
  links:
    - zookeeper:zk
  environment:
    KAFKA_ADVERTISED_HOST_NAME: "kafka"
    KAFKA_ADVERTISED_PORT: 9092
    KAFKA_CREATE_TOPICS: "Topic1,Topic2"
